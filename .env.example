# ===== Database =====
POSTGRES_DB=nmpa
POSTGRES_USER=nmpa
POSTGRES_PASSWORD=nmpa
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg://nmpa:nmpa@db:5432/nmpa

# ===== API =====
API_HOST=0.0.0.0
API_PORT=8000
AUTH_SECRET=local-dev-auth-secret
AUTH_COOKIE_NAME=ivd_session
AUTH_SESSION_TTL_HOURS=168
AUTH_COOKIE_SECURE=false
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
BOOTSTRAP_ADMIN_EMAIL=admin@example.com
BOOTSTRAP_ADMIN_PASSWORD=admin12345
# Alias variables (docker compose / docs convenience). Recommended to set these.
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin12345

# (Legacy) BasicAuth vars; keep only if you still run endpoints guarded by HTTP Basic.
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=change-me

# ===== Admin Data Sources =====
# Encryption key for storing data source configs (must NOT be left as "change-me-*")
DATA_SOURCES_CRYPTO_KEY=local-dev-data-sources-key

# ===== Sync Source =====
NMPA_UDI_DOWNLOAD_PAGE=https://udi.nmpa.gov.cn/download.html
DOWNLOAD_BASE_URL=https://udi.nmpa.gov.cn
STAGING_DIR=/app/staging
SYNC_INTERVAL_SECONDS=86400

# ===== Digest Channels =====
WEBHOOK_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=

# ===== Web =====
# Browser-side base URL (when running docker compose on local machine)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
# Server-side base URL (web container -> api container)
API_BASE_URL=http://api:8000

# ===== Export Quota =====
EXPORT_QUOTA_BASIC_DAILY=5
EXPORT_QUOTA_PRO_DAILY=50
EXPORT_QUOTA_ENTERPRISE_DAILY=500
